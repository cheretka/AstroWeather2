<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.astroweather2">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.astroweather2.MainActivity" android:theme= "@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.astroweather2.OptionsActivity"
            android:label="@string/options_activity_name"
            android:parentActivityName="com.example.astroweather2.MainActivity"
            android:theme= "@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.astroweather2.MainActivity" />
        </activity>
        <activity
            android:name="com.example.astroweather2.LocationListActivity"
            android:label="@string/location_list_activity_name"
            android:parentActivityName="com.example.astroweather2.MainActivity"
            android:theme= "@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.astroweather2.MainActivity" />
        </activity>
        <activity
            android:name="com.example.astroweather2.AddLocationActivity"
            android:label="@string/add_location_activity_name"
            android:parentActivityName="com.example.astroweather2.LocationListActivity"
            android:theme= "@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.astroweather2.LocationListActivity" />>
        </activity>
    </application>

</manifest>